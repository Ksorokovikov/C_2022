#include <iostream>
using namespace std;

class Bucket 
{
public:
int used, volume;

void flush()
{
used = 0;
return;
}

int fill(int x)
{
used = used + x;
if(used>volume) 
{
int t = used - volume;
used = volume;
return t;
}
return 0;
}

Bucket(int a, int b)
{
volume = a;
used = b;
}
};

int main(){
Bucket test_01(12, 3);
cout << "1) " << test_01.volume << ", " << test_01.used << "\n"; 
int rest = test_01.fill(14);
cout << "2) " << test_01.used << ", " << rest << "\n"; 

test_01.flush();
rest = test_01.fill(8);
cout << "3) " << test_01.used << ", " << rest << "\n"; 
return 0;
}
